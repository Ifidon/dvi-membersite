extends layout

block content
	div.container
			div.carousel.slide#carousel(data-ride='carousel')
				ol.carousel-indicators
					li.active(data-target='#carousel' data-slide-to='0')
					li(data-target='#carousel' data-slide-to='1')
					li(data-target='#carousel' data-slide-to='2')
				div.carousel-inner
					div.carousel-item.active
						img.d-block.w-100(src='/images/choir.jpg' alt='first slide')
						div.carousel-caption.d-none.d-md-block
							h5 Your Caption
							p The displayed pictures and text are for presentation purposes only. Your desired pictures and texts will replace the ones you see here.
					
					div.carousel-item
						img.d-block.w-100(src='/images/piano.jpg' alt='Second Slide')
						div.carousel-caption.d-none.d-md-block
							h5 Your Caption
							p The displayed pictures and text are for presentation purposes only. Your desired pictures and texts will replace the ones you see here.

					div.carousel-item
						img.d-block.w-100(src='/images/guitar.jpg' alt='Third Slide')
						div.carousel-caption.d-none.d-md-block
							h5 Your Caption
							p The displayed pictures and text are for presentation purposes only. Your desired pictures and texts will replace the ones you see here.

					a.carousel-control-prev(href='#carousel' role='button' data-slide='prev')
						span.carousel-control-prev-icon(aria-hidden='true')
						span.sr-only Previous
					a.carousel-control-next(href='#carousel' role='button' data-slide='next')
						span.carousel-control-next-icon(aria-hidden='true')
						span.sr-only Next
		br